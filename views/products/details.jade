extends ../layout
block content

  .navbar
    .navbar-inner
        a.brand(href="/products/#{object.slug}") Product: 
          strong=object.name
        ul.nav
            li
                a(href="/products/form/") Create
            li.active
                a(href="/products/#{object.slug}/") Details
            li
                a(href="/products/form/#{object.slug}/") Update
            li
                a(href="/products/#{object.slug}/delete/") Delete
            li
                a(href="/products/") List


  .row-fluid
    - if(object)
      ul.thumbnails
        li
          .thumbnail
            a(href="/products/#{object.slug}")
              img(alt="300x200", style="width: 300px; height: 200px;", src="#{object.img}")
            .caption
              a(href="/products/#{object.slug}")
                h3=object.name
              p=object.description
    - else
      p.clearfix Resource not found!