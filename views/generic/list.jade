extends ../layout
block content


    .navbar
        .navbar-inner
            a.brand(href="/products/") Products
            ul.nav
                li
                    a(href="/products/form/") Create

    section.products
        
    - if(products.length)
        .row-fluid
            each item in products
                .preview-widget(style="float:left;margin-right:60px")
                    a(href="/products/#{item.slug}")
                        img(src="#{item.img}", alt="#{item.name})
                        .mask
                            h2=item.name
                            p=item.description